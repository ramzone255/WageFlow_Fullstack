<Page x:Class="WageFlow.Frontend.src.Pages.Work_EntryPages.Work_EntryCommandPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WageFlow.Frontend.src.Pages.Work_EntryPages"
      mc:Ignorable="d" 
      d:DesignHeight="403" d:DesignWidth="800"
      Title="Work_EntryCommandPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="76"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" Height="403">
            <StackPanel.Background>
                <LinearGradientBrush StartPoint="0,0"
              EndPoint="0,1">
                    <GradientStop Color="#650e10" Offset="0"/>
                    <GradientStop Color="#ca2a33" Offset="0.3"/>
                    <GradientStop Color="#97afbe" Offset="0.5"/>
                    <GradientStop Color="#dce2e7" Offset="0.7"/>
                    <GradientStop Color="#1a1b19" Offset="1"/>
                </LinearGradientBrush>
            </StackPanel.Background>
            <StackPanel Height="308">
                <Button Height="50" Width="50" Background="Transparent" Margin="0,20,0,0" Click="Work_EntrySaveClick">
                    <Image Source="/src/Images/Save_Img.png"/>
                    <Button.ToolTip>
                        <ToolTip Height="30" Style="{StaticResource RoundToolsTemplate}">
                            ㅤㅤСохранитьㅤ
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
                <Button Height="50" Width="50" Background="Transparent" Margin="0,20,0,0" Click="BackClick">
                    <Image Source="/src/Images/Return_Img.png"/>
                    <Button.ToolTip>
                        <ToolTip Height="30" Style="{StaticResource RoundToolsTemplate}">
                            ㅤㅤВернуться назадㅤㅤ
                        </ToolTip>
                    </Button.ToolTip>
                </Button>
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1" Background="White">
            <StackPanel Width="400" Margin="0,70,0,0">
                <Label FontSize="20" Width="175" HorizontalAlignment="Left"
        FontStyle="Italic"
        FontWeight="Heavy"
        Foreground="#533840">Количество:</Label>
                <TextBox Height="30" Width="200" Margin="150,-35,0,0" Name="TBoxQuantity"/>
            </StackPanel>
            <StackPanel Width="400" Margin="0,0,0,0">
                <Label FontSize="20" Width="175" HorizontalAlignment="Left"
        FontStyle="Italic"
        FontWeight="Heavy"
        Foreground="#533840">Дата:</Label>
                <TextBox Height="30" Width="200" Margin="150,-35,0,0" Name="TBoxDate"/>
            </StackPanel>
            <StackPanel Width="400" Margin="0,0,0,0">
                <Label FontSize="20" Width="175" HorizontalAlignment="Left"
FontStyle="Italic"
FontWeight="Heavy"
Foreground="#533840">Сотрудник:</Label>
                <ComboBox SelectedValue="{Binding id_staff}" Height="30" Width="200" 
      BorderThickness="2" 
      BorderBrush="Black" 
      x:Name="CmbSelectStaff" 
      Margin="150,-35,0,0"/>
            </StackPanel>
            <StackPanel Width="400" Margin="0,0,0,0">
                <Label FontSize="20" Width="175" HorizontalAlignment="Left"
        FontStyle="Italic"
        FontWeight="Heavy"
        Foreground="#533840">Тип работы:</Label>
                <ComboBox SelectedValue="{Binding id_work_type}" Height="30" Width="200" 
              BorderThickness="2" 
              BorderBrush="Black" 
              x:Name="CmbSelectWork_Type" 
              Margin="150,-35,0,0"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
